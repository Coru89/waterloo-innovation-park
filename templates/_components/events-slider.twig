{% set eventOptions = {
    limit: 15,
    eventImage: ':notempty:'
} %}

{% paginate craft.calendar.events(eventOptions) as pageInfo, events %}

	{% for event in events %}
		{% if (event.eventImage | length) == 1 %}
			{% set image = event.eventImage.one() %}
		{% endif %}

		{% if image is defined %}
			<picture class="gallery-card__picture">
				<source {{ attr({ type: 'image/webp', srcset: image.getSrcset( [80], { format: 'webp', } ), sizes: '(max-width: 768px) 100vw, 304px' }) }}>
				<source {{ attr({ type: 'image/jpeg', srcset: image.getSrcset( [80], { format: 'jpeg', } ), sizes: '(max-width: 768px) 100vw, 304px' }) }}>
				<img alt="" class="gallery-card__image" src={{image.url}} width={{image.width}} height={{image.height}}>
			</picture>
		{% endif %}
	{% endfor %}
