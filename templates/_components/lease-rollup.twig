{% set items = craft.entries.section('lease').one().propertyItem.all() %}

<section class="lease-rollup">
    <div class="lease-rollup__inner u-container">
		<ul class="lease-rollup__list">
			{% for item in items %}
				<li class="lease-rollup__card">
					{% if item.image %}
						{% set image = item.image.one() %}
						<picture class="lease-rollup__picture">
							<source {{ attr({ type: 'image/webp', srcset: image.getSrcset( [320, 30, 416, 600, 768], { format: 'webp', } ), sizes: '(max-width: 768px) 100vw, (max-width: 1052px) 50vw, 420px' , }) }}>
							<source {{ attr({ type: 'image/jpeg', srcset: image.getSrcset( [320, 360, 416, 600, 768], { format: 'jpeg', } ), sizes: '(max-width: 768px) 100vw, (max-width: 1052px) 50vw, 420px' , }) }}>
							<img alt="{{item.artName}}" class="lease-rollup__image" src={{image.url}} width={{image.width}} height={{image.height}} loading="lazy">
						</picture>
					{% endif %}
					<div class="lease-rollup__property">{{item.propertyName}}</div>
					<div class="lease-rollup__details">{{item.propertyDetails}}</div>
					<a class="lease-rollup__learn" href={{item.learnMoreLink}}>Learn More</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</section>