<nav id="nav" class="nav">
    <button class="nav__button" id="nav" aria-label="toggle navigation menu">
		<svg class="nav__button--open" fill="#234a9e" viewBox="0 0 100 80" width="25" height="25">
			<rect width="100" height="15"></rect>
			<rect y="30" width="100" height="15"></rect>
			<rect y="60" width="100" height="15"></rect>
		</svg>
		<svg class="nav__button--close mobile-nav__exit-button" fill="#234a9e" width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
			<line x1="1" y1="1" x2="17" y2="17" stroke="black" stroke-width="2"/>
			<line x1="1" y1="17" x2="17" y2="1" stroke="black" stroke-width="2"/>
		</svg>
    </button>
	    <div class="nav__wrapper">
			<ul class="nav__list" role="menu">
			{% set pages = craft.entries.section('siteNavigation').all() %}
			{% if pages is defined %}
				{% for page in pages %}
					{% if page.children | length %}
						{# show top nav item treated with chevron etc  #}
						<li class="nav__item nav__item--has-level-2" role="presentation">
							<a class="nav__item-link" href="#">
								<span class="nav__item-link-text">{{ page.title }}</span>
								<svg class="arrow" viewBox="0 0 24 24" aria-hidden="true">
									<path d="M9.707 18.707l6-6a.999.999 0 0 0 0-1.414l-6-6a.999.999 0 1 0-1.414 1.414L13.586 12l-5.293 5.293a.999.999 0 1 0 1.414 1.414z"></path>
								</svg>
							</a>
							<ul class="nav__sublist">
								{% for child in page.children %}
									<li class="nav__item nav__item-level-2">
										<a class="nav__item-link nav__item-link-level-2" href="{{ child.path }}">
											<span class="nav__item-link-text">{{ child.title }}</span>
										</a>
									</li>
								{% endfor %}
							</ul>
						</li>

					{% elseif page.level == 1 %}
						{# show normal top nav treatment #}
						<li class="nav__item" role="presentation">
							<a class="nav__item-link" href={{page.path}} role="menuitem">
								{{ page.title }}
							</a>
						</li>
					{% endif %}
				{% endfor %}
			{% endif %}
		</ul>
	</div>
</nav>
